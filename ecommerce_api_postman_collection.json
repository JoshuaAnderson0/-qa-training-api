              "raw": "http://localhost:5000/api/users?id=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "users"],
              "query": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "SQL Injection Test - Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/users?id=1 OR 1=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "users"],
              "query": [
                {
                  "key": "id",
                  "value": "1 OR 1=1"
                }
              ]
            }
          }
        }
      ]
